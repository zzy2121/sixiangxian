<Window x:Class="TaskManager.Views.CreateTagWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="创建新标签" Height="450" Width="500"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize" MinHeight="400" MinWidth="450">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="创建新标签" FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>
        
        <ScrollViewer Grid.Row="1">
            <StackPanel>
                <Label Content="标签名称:" FontWeight="Bold"/>
                <TextBox Name="txtTagName" Margin="0,5,0,20" Height="25"/>
                
                <Label Content="当前选择的颜色:" FontWeight="Bold"/>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,20">
                    <Rectangle Name="rectColorPreview" Width="50" Height="30" Stroke="Black" 
                              StrokeThickness="2" Fill="#2196F3" Margin="0,0,15,0"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="颜色预览" FontSize="12" Foreground="Gray"/>
                        <Button Name="btnSelectColor" Content="自定义颜色" Padding="10,5" 
                               Click="SelectColor_Click" Margin="0,5,0,0"/>
                    </StackPanel>
                </StackPanel>
                
                <Label Content="标签分类:" FontWeight="Bold"/>
                <ComboBox Name="cmbTagCategory" Margin="0,5,0,20" Height="25"/>
                
                <Label Content="快速选择颜色:" FontWeight="Bold"/>
                <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,5,0,10">
                    <WrapPanel Name="pnlPresetColors" />
                </Border>
                
                <TextBlock Text="点击上方颜色块快速选择，或使用自定义颜色按钮" 
                          FontSize="11" Foreground="Gray" TextWrapping="Wrap" Margin="0,5,0,0"/>
            </StackPanel>
        </ScrollViewer>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="btnCreate" Content="创建" Padding="20,8" Margin="0,0,10,0" 
                   Click="Create_Click" IsDefault="True"/>
            <Button Name="btnCancel" Content="取消" Padding="20,8" Click="Cancel_Click" 
                   IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>