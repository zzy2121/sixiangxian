<Window x:Class="TaskManager.Views.CreateTagWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="创建新标签" Height="300" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="创建新标签" FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>
        
        <StackPanel Grid.Row="1">
            <Label Content="标签名称:"/>
            <TextBox Name="txtTagName" Margin="0,0,0,15"/>
            
            <Label Content="标签颜色:"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                <Rectangle Name="rectColorPreview" Width="30" Height="20" Stroke="Black" 
                          StrokeThickness="1" Fill="#2196F3" Margin="0,0,10,0"/>
                <Button Name="btnSelectColor" Content="选择颜色" Click="SelectColor_Click"/>
            </StackPanel>
            
            <Label Content="标签分类:"/>
            <ComboBox Name="cmbTagCategory" Margin="0,0,0,15"/>
            
            <Label Content="预设颜色:"/>
            <WrapPanel Name="pnlPresetColors" Margin="0,0,0,10"/>
        </StackPanel>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="btnCreate" Content="创建" Padding="20,8" Margin="0,0,10,0" 
                   Click="Create_Click" IsDefault="True"/>
            <Button Name="btnCancel" Content="取消" Padding="20,8" Click="Cancel_Click" 
                   IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>