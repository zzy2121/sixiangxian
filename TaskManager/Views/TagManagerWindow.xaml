<Window x:Class="TaskManager.Views.TagManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="标签管理" Height="500" Width="600"
        WindowStartupLocation="CenterOwner">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="标签管理" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- 标签列表 -->
            <GroupBox Grid.Column="0" Header="现有标签" Margin="0,0,10,0">
                <DataGrid Name="dgTags" AutoGenerateColumns="False" CanUserAddRows="False"
                         SelectionMode="Single" GridLinesVisibility="Horizontal">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="颜色" Width="50">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Rectangle Width="20" Height="15" Fill="{Binding Color}" Stroke="Gray"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="名称" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="分类" Binding="{Binding Category}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
            
            <!-- 操作按钮 -->
            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                <Button Name="btnCreateTag" Content="创建标签" Padding="15,8" Margin="0,0,0,10" Click="CreateTag_Click"/>
                <Button Name="btnEditTag" Content="编辑标签" Padding="15,8" Margin="0,0,0,10" Click="EditTag_Click" IsEnabled="False"/>
                <Button Name="btnDeleteTag" Content="删除标签" Padding="15,8" Margin="0,0,0,10" Click="DeleteTag_Click" IsEnabled="False"/>
                <Separator Margin="0,10"/>
                <Button Name="btnRefresh" Content="刷新" Padding="15,8" Click="Refresh_Click"/>
            </StackPanel>
        </Grid>
        
        <Button Grid.Row="2" Name="btnClose" Content="关闭" Padding="20,8" 
               HorizontalAlignment="Right" Click="Close_Click"/>
    </Grid>
</Window>